{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"src/**",
			"test/**",
			"package.json",
			"tsconfig.json",
			"jest.config.ts",
			"README.md",
			"biome.json",
			".release-it.json",
			".gitattributes",
			".gitignore",
			".npmignore",
			"COPYING"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "asNeeded",
			"lineEnding": "lf",
			"lineWidth": 110,
			"bracketSameLine": true,
			"enabled": true,
			"trailingCommas": "es5",
			"bracketSpacing": true,
			"indentStyle": "tab",
			"quoteProperties": "asNeeded"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
