{
	"$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
	"plugins": {
		"release-it-pnpm": {}
	},
	"git": {
		"commitMessage": "chore: release ${version}",
		"tagName": "v${version}"
	},
	"npm": {
		"publish": true
	},
	"hooks": {
		"before:release": ["pnpm build", "pnpm fl", "pnpm test"]
	}
}
